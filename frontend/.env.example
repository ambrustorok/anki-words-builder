# Copy to .env for local/tunnel development overrides

# Comma-separated list of hostnames allowed to reach the dev server (Cloudflare tunnels, etc.)
# VITE_ALLOWED_HOSTS=anki.example.com

# Port Vite should listen on (defaults to 5173)
# VITE_DEV_PORT=5173

# Where to proxy /api requests during development. Keep pointing to the backend service.
VITE_API_PROXY_TARGET=http://backend:8100

# Optional override if the React app needs to call a different API origin in production builds
# VITE_API_URL=https://anki.example.com/api
